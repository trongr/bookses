body {
    font-family: helvetica, arial, sans;
    margin: 0;
}

a {
    text-decoration: none;
    color: inherit;
}

.clearboth {
    clear: both;
}

#headerbox {
    position: relative;
    height: 500px;
    width: 100%;
}

#headerimg {
    position: relative;
    top: 0; left: 0;
    width: 100%;
    height: 500px;
    overflow: hidden;
}

#headerimg #darkoverlay {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: #000;
    opacity: 0.3;
}

#headerimg img {
    position: absolute;
    left: -100%;
    right: -100%;
    top: -100%;
    bottom: -100%;
    margin: auto;
    min-height: 100%;
    min-width: 100%;
}

#header {
    position: absolute;
    top: 0; left: 0;
    width: 100%;
    height: 500px;
    display: table;
}

#headertext {
    width: 100%;
    height: 500px;
    text-align: center;
    vertical-align: middle;
    display: table-cell;
}

#bookses {
    font-size: 5em;
    color: #fff;
    /* font-weight: lighter; */
}

#tagline {
    font-size: 3em;
    color: #fff;
    opacity: 0.5;
}

#description {
    margin: 100px 200px 0 200px;
    font-weight: lighter;
    font-size: 1.2em;
}

#book {
    margin: 100px 200px 0 200px;
    font-size: 1em;
    font-family: georgia, serif;
}

#footer {
    width: 100%;
    margin: 100px 0 100px 0;
}

#footer #addthisbox {
    text-align: center;
}

#footer #addthisbox div {
    display: inline-block !important;
}

#footer #backbutton {
    font-size: 3em;
    text-align: center;
    margin: 100px 0 100px 0;
}

@media (max-width: 500px){

    #headerbox,
    #headerimg,
    #header,
    #headertext {
        height: 250px;
    }

    #bookses {
        font-size: 1.5em;
    }

    #tagline {
        font-size: 1em;
    }

    #description {
        margin: 25px 25px 0 25px;
        /* font-size: 0.8em; */
    }

    #book {
        margin: 25px 25px 0 25px;
        /* font-size: 0.7em; */
    }

}

@media (min-width: 500px) and (max-width: 750px){

    #headerbox,
    #headerimg,
    #header,
    #headertext {
        height: 300px;
    }

    #bookses {
        font-size: 2em;
    }

    #tagline {
        font-size: 1.5em;
    }

    #description {
        margin: 50px 50px 0 50px;
        /* font-size: 1em; */
    }

    #book {
        margin: 50px 50px 0 50px;
        /* font-size: 0.8em; */
    }

}

@media (min-width: 750px) and (max-width: 1000px){

    #headerbox,
    #headerimg,
    #header,
    #headertext {
        height: 400px;
    }

    #bookses {
        font-size: 4em;
    }

    #tagline {
        font-size: 2.5em;
    }

    #description {
        margin: 50px 100px 0 100px;
        /* font-size: 1.2em; */
    }

    #book {
        margin: 50px 100px 0 100px;
        /* font-size: 1em; */
    }

}
